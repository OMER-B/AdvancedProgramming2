@model ImageServiceWeb.Models.Photo

@{
    ViewBag.Title = "PhotoScreen";
}

<h2>@Model.Name</h2>
<h3>@Model.Month, @Model.Year</h3>

<div class="text-center">
    <a href="@Url.Content("~\\"+Model.Path)">
        <img src="@Url.Content("~\\"+Model.Path)" />
    </a>
</div>


<table>
    <tr>
        <td>
            <button type="button" class="btn btn-outline-secondary">
                @Html.ActionLink("Back to gallery", "Gallery", new { @class = "glyphicon glyphicon-arrow-left" })
            </button>
        </td>
        <td>
            <button type="button" class="btn btn-outline-secondary">
                @Html.ActionLink(" ", "SureToRemovePhoto", new { id = Model.ID }, new { @class = "glyphicon glyphicon-trash" })
            </button>
        </td>
    </tr>
</table>