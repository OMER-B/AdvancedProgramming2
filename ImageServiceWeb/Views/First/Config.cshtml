@model ImageServiceWeb.Models.ConfigModel

@{
    ViewBag.Title = "Config";
}

<h2>Config</h2>

<table>
    @{ foreach (var v in Model.List)
        {
            <tr>
                <td>
                    @v.Title
                </td>
                <td>
                    @v.Content
                </td>
            </tr>
        }
    }
</table>

<table>
    @{ foreach (var v in Model.HandlersList)
        {
            <tr>
                <td>
                    @v.Title
                </td>
                <td>
                    @v.Content
                </td>
                <td>
                    @Html.ActionLink("Remove", "SureToRemove", new { handler = v.Content })
                </td>
            </tr>
        }
    }
</table>
