<UserControl x:Class="GUIProject.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUIProject.ViewModel"
             mc:Ignorable="d">
    <Grid>
        <!--#region Grid Set-up-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--#region Title-->
        <TextBlock Grid.Row="0"
                   FontSize="60"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">Settings</TextBlock>
        <!--#endregion-->

        <!--#region Config-->
        <ItemsControl Grid.Row="1"
                      ItemsSource="{Binding ConfigList}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Margin="5">
                            <Run Text="{Binding Title, Mode=OneWay}" />
                            <Run Text="{Binding Content, Mode=OneWay}" FontWeight="Bold" />
                        </TextBlock>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <!--#endregion-->

        <!--#region Remove Button-->
        <Button Grid.Row="2"
                x:Name="buttonRemove"
                Command="{Binding RemoveCommand}"
                Padding="10" Content="Remove" FontSize="15">
        </Button>
        <!--#endregion -->

        <!--#region Handlers-->
        <ListView Grid.Row="3"
                  ItemsSource="{Binding HandlersList}"
                  SelectedItem="{Binding SelectedHandler, Mode=TwoWay}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="2">
                        <TextBlock Text="{Binding Content}" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListView>
        <!--#endregion-->
    </Grid>
</UserControl>
